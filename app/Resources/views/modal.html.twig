
<div class="modal modal-styled fade in" id="{{ modal_id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">{{ modal_titulo }}</h4>
            </div>
            <div class="modal-body">
                {% block modal_contenido %} content{% endblock modal_contenido %}
            </div>
            <div class="modal-footer">
                {#<button type="button" class="btn btn-primary">Aplicar</button>#}
                {% block modal_botones %}{% endblock %}
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>